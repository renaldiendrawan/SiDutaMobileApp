<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentberanda"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BerandaFragment">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->

        <RelativeLayout
            android:id="@+id/berandaFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@color/primaryColor"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_akun"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/background_profil"
                    android:src="@drawable/ic_person_outline"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <TextView
                android:id="@+id/B_txt_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/poppinsbold"
                android:text="Text View"
                android:textColor="@color/white"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/B_txt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/B_txt_5"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/poppinssemibold"
                android:text="Selamat Datang di SiDuta!"
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/B_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/B_txt_1"
                android:layout_marginTop="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:clipToPadding="false"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:scrollbars="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"/>

            <TextView
                android:id="@+id/B_txt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/B_recyclerview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppinssemibold"
                android:text="Menu"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <GridLayout
                android:id="@+id/B_gl_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/B_txt_2"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="0dp"
                android:layout_centerHorizontal="true"
                android:columnCount="2"
                android:rowCount="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/B_cv_1"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/B_img_1"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/jadwal"
                        android:scaleType="fitCenter"
                        tools:ignore="SpeakableTextPresentCheck"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="Jadwal"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/B_cv_2"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/B_img_2"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/laporan"
                            android:scaleType="fitCenter"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="Laporan"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/B_smartSlider"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/B_gl_1"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="30dp"
                android:paddingStart="60dp"
                android:paddingEnd="60dp"/>

        </RelativeLayout>

    </FrameLayout>
</ScrollView>