<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemlaporanimunisasi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/LI_linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/LI_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:drawableStart="@drawable/ic_balita"
                    android:fontFamily="@font/poppinsregular"
                    android:gravity="center_vertical"
                    android:text="Nama Anak: "
                    android:textColor="@color/primaryColor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/LI_textnama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/LI_nama"
                    android:fontFamily="@font/poppinsregular"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LI_linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/LI_linear1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/LI_tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/ic_date"
                    android:fontFamily="@font/poppinsregular"
                    android:gravity="center_vertical"
                    android:text="Tanggal Imunisasi: "
                    android:textColor="@color/primaryColor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/LI_texttanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/LI_tanggal"
                    android:fontFamily="@font/poppinsregular"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LI_linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/LI_linear2">

                <TextView
                    android:id="@+id/LI_jenis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/ic_vaccine"
                    android:fontFamily="@font/poppinsregular"
                    android:gravity="center_vertical"
                    android:text="Jenis Imunisasi: "
                    android:textColor="@color/primaryColor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/LI_textjenis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/LI_jenis"
                    android:fontFamily="@font/poppinsregular"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>