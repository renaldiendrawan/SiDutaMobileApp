<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/SS_img_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/logoaplikasi" />

    <TextView
        android:id="@+id/SS_txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SS_img_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppinsbold"
        android:text="SiDuta"
        android:textColor="@color/secondaryColor"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/SS_txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SS_txt_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Selamat Datang di SiDuta"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/SS_txt_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SS_txt_2"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="center"
        android:padding="20dp"
        android:text="Menjaga Generasi Sehat Untuk Bangun Masa Depan"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/SS_img_2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/gambarsplashscreen" />

</RelativeLayout>