<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginVertical="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/JP_texttanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_date"
                android:fontFamily="@font/poppinsregular"
                android:textSize="10sp"
                android:textColor="@color/primaryColor"/>

            <TextView
                android:id="@+id/JP_textjam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/JP_texttanggal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_time"
                android:fontFamily="@font/poppinsregular"
                android:textSize="10sp"
                android:textColor="@color/primaryColor"/>

            <TextView
                android:id="@+id/JP_texttempat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/JP_textjam"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_location"
                android:fontFamily="@font/poppinsregular"
                android:textSize="10sp"
                android:textColor="@color/primaryColor"/>

            <TextView
                android:id="@+id/JP_textketerangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/JP_texttempat"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:text="Jadwal Penimbangan di Kelurahan Kauman, diharapkan kepada ibu yang mempunyai balita untuk datang di lokasi Posyandu"
                android:fontFamily="@font/poppinsregular"
                android:textSize="10sp"
                android:textColor="@color/grey"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>