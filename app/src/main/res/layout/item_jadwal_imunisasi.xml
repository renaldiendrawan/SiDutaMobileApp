<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/itemjadwalimunisasi"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginVertical="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/JI_texttanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_date"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/primaryColor"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/JI_textjam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/JI_texttanggal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_time"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/primaryColor"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/JI_texttempat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/JI_textjam"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_location"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/primaryColor"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/JI_textvaksin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/JI_texttempat"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_vaccine"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/primaryColor"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/JI_textketerangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/JI_textvaksin"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/poppinsregular"
                android:text="Jadwal Imunisasi di Kelurahan Kauman, diharapkan kepada Ibu yang mempunyai balita untuk datang di lokasi Posyandu"
                android:textColor="@color/grey"
                android:textSize="12sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>