<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AkunActivity">

    <LinearLayout
        android:id="@+id/A_ly_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp">
        <ImageButton
            android:id="@+id/A_img_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/A_img_1"
            android:layout_marginLeft="5dp"
            android:text="Akun"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:id="@+id/A_txt_1" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/A_btn_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/A_ly_1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/background_profil"
        android:src="@drawable/ic_person1"
        android:backgroundTint="@color/lightgrey"
        tools:ignore="SpeakableTextPresentCheck"/>

    <LinearLayout
        android:id="@+id/A_ly_2"
        android:layout_toRightOf="@id/A_btn_1"
        android:layout_below="@id/A_ly_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="30dp">
        <TextView
            android:id="@+id/A_txt_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Orang Tua"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="15sp"
            android:textColor="@color/grey"/>
        <TextView
            android:id="@+id/A_txt_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NIK Orang Tua"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="15sp"
            android:textColor="@color/grey"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/A_ly_3"
        android:layout_below="@id/A_btn_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="60dp" >
        <TextView
            android:id="@+id/A_txt_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Profil Akun"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="15sp"
            android:textColor="@color/grey"
            android:layout_marginLeft="30dp" />
        <ImageButton
            android:id="@+id/A_img_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_next"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/A_ly_4"
        android:layout_below="@id/A_ly_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp" >
        <TextView
            android:id="@+id/A_txt_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pengaturan Akun"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="15sp"
            android:textColor="@color/grey"
            android:layout_marginLeft="30dp" />
        <ImageButton
            android:id="@+id/A_img_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_next"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>

</RelativeLayout>