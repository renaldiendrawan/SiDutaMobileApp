<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".model.register.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/R_img_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/R_txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/R_img_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="Daftar Akun"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/R_ly_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/R_txt_1"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:padding="30dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/R_textinputlayoutnamaorangtua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:helperTextEnabled="true"
                app:helperTextTextColor="@color/primaryColor"
                app:startIconDrawable="@drawable/ic_person_outline"
                app:startIconTint="@color/grey">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/R_edt_namaorangtua"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:background="@drawable/button_shape"
                    android:backgroundTint="@color/white"
                    android:ems="10"
                    android:fontFamily="@font/poppinsmedium"
                    android:hint="Nama Ibu"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/grey"
                    android:textSize="15dp"
                    tools:ignore="TextSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/R_textInputLayoutNIK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:startIconDrawable="@drawable/ic_card"
                app:startIconTint="@color/grey">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/R_edt_nikorangtua"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_shape"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/poppinsmedium"
                    android:hint="NIK Ibu"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/grey"
                    android:textSize="15dp"
                    tools:ignore="TextSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:startIconDrawable="@drawable/ic_calendar"
                app:startIconTint="@color/grey">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/R_edt_tanggallahir"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_shape"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/poppinsmedium"
                    android:hint="Tanggal Lahir Ibu"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/grey"
                    android:textSize="15dp"
                    tools:ignore="TextSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/R_textinputlayoutnamaayah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:helperTextEnabled="true"
                app:helperTextTextColor="@color/primaryColor"
                app:startIconDrawable="@drawable/ic_person1"
                app:startIconTint="@color/grey">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/R_edt_namaayah"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:background="@drawable/button_shape"
                    android:backgroundTint="@color/white"
                    android:ems="10"
                    android:fontFamily="@font/poppinsmedium"
                    android:hint="Nama Ayah"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/grey"
                    android:textSize="15dp"
                    tools:ignore="TextSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:startIconDrawable="@drawable/ic_alamat"
                app:startIconTint="@color/grey">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/R_edt_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_shape"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/poppinsmedium"
                    android:hint="Alamat"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/grey"
                    android:textSize="15dp"
                    tools:ignore="TextSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:startIconDrawable="@drawable/email"
                app:startIconTint="@color/grey">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/R_edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_shape"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/poppinsmedium"
                    android:hint="Email"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/grey"
                    android:textSize="15dp"
                    tools:ignore="TextSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/R_textinputlayoutkatasandi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:counterEnabled="true"
                app:counterMaxLength="20"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/grey"
                app:helperText="Masukkan Kata Sandi"
                app:helperTextEnabled="true"
                app:helperTextTextColor="@color/primaryColor"
                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="@color/grey">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/R_inputkatasandi"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_shape"
                    android:backgroundTint="@color/white"
                    android:ems="15"
                    android:fontFamily="@font/poppinsmedium"
                    android:hint="Kata Sandi"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/grey"
                    android:textSize="15sp"
                    android:typeface="normal"
                    tools:ignore="TextSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <Button
            android:id="@+id/R_btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/R_ly_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:width="300dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/poppinssemibold"
            android:text="Daftar"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/R_btn_1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:text="Sudah memiliki akun? "
                android:textColor="@color/grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/R_txt_masuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:text=" Masuk"
                android:textColor="@color/primaryColor"
                android:textSize="15sp" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>